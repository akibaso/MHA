{
    "$schema": "../pipeline.schema.json",
    "Startup":{
        "next":[
            "StartupFinish",
            "AFKFinishS2",
            "AFKFinishS1",
            "AFKing",
            "SKIP",
            "DailyFreeLottery",
            "Preparing",
            "Sub_Transfer",
            "NetworkError",
            "HBRTitle",
            "Sub_StartHBR"
        ]
    },
    "Sub_StartHBR": {
        "is_sub": true,
        "action": "StartApp",
        "package": "com.heavenburnsred/com.unity3d.player.UnityPlayerActivity"
    },
    "HBRTitle":{
        "action": "DoNothing",
        "recognition": "OCR",
        "text": [".*(?:緋|染|天|空).*"],
        "next":["NetworkError","TAPTOSTART"],
        "is_sub": true
    },
    "Preparing":{
        "recognition": "OCR",
        "text": ["[準備中]{3}","NOW","LOADING"]
    },
    "NetworkError":{
        "recognition": "OCR",
        "text": ["[連線失敗]{3}"],
        "is_sub": true,
        "next":["ClickOK"]
    },
    "TAPTOSTART":{
        "action": "Click",
        "recognition": "OCR",
        "text": ["TAP|TO|START"],
        "target": true,
        "timeout": 5000
    },
    "Sub_Transfer":{
        "enabled": false,
        "next": ["TransferS3","TransferS2","TransferS1"],
        "is_sub": true
    },
    "TransferS1":{
        "recognition": "OCR",
        "text": "即將繼承以下資料",
        "next":["TransferS1OK"]
    },
    "TransferS1OK":{
        "recognition": "OCR",
        "action": "Click",
        "target": true,
        "text": ["繼承"]
    },
    "TransferS2":{
        "recognition": "OCR",
        "text": ["確定要直接開始繼承嗎"],
        "next": ["ClickOK"]
    },
    "ClickOK":{
        "recognition": "OCR",
        "action": "Click",
        "target": true,
        "text": ["[OK]+"]
    },
    "TransferS3":{
        "recognition": "OCR",
        "text": "資料繼承完畢",
        "next": ["ClickOK"]
    },
    "AFKing":{
        "is_sub": true,
        "recognition": "OCR",
        "text": "結束自動操作",
        "action": "Click",
        "target": true
    },
    "AFKFinishS1":{
        "is_sub": true,
        "recognition": "OCR",
        "text": ["戰鬥成果","BattleResult","Battle","Result"],
        "action": "Click"
    },
    "AFKFinishS2":{
        "recognition": "OCR",
        "text": ["[輕觸畫面繼續]{4}"],
        "action": "Click",
        "next": ["ArenaMenu"]
    },
    "ArenaMenu":{
        "recognition": "TemplateMatch",
        "template": "UI/Back_22_75_52_46__0_25_152_146.png",
        "action": "Click",
        "target": true,
        "next": ["ArenaBackVN"]
    },
    "ArenaBackVN":{
        "recognition": "TemplateMatch",
        "template": "UI/skip_1086_93_43_36__1010_43_143_136.png",
        "action": "Click"
    },
    "DailyFreeLottery":{
        "recognition": "OCR",
        "text": [".*(?:戰|型|探|索).*","Lottery"],
        "next":["SKIP"]
    },
    "SKIP":{
        "recognition": "OCR",
        "text": ["SKIP"],
        "action": "Click",
        "target": true,
        "is_sub": true
    },
    "StartupFinish":{
        "recognition": "OCR",
        "text": ["主畫面","HOME"]
    }
}